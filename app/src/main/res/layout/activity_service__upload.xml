<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Service_Upload">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:elevation="4dp"
        android:theme="@style/AppTheme.PopupOverlay"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="Edit Services Details"
        android:fitsSystemWindows="true"
        app:titleTextColor="#000">


        <ImageButton
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|end"
            android:backgroundTint="@color/colorwhite"
            app:srcCompat="@drawable/ic_check_black_36dp" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/etSerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="116dp"
        android:layout_weight="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/et_round"
        android:padding="15dp"
        android:hint="Service ID(e.g. 001)"
        android:inputType="number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etSerVehType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:background="@drawable/et_round"
        android:hint="Vehicle Type"
        android:inputType="text"
        android:padding="15dp"
        android:singleLine="true" />


    <EditText
        android:id="@+id/etSerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="244dp"
        android:layout_weight="1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/et_round"
        android:hint="Service Name"
        android:inputType="text"
        android:padding="15dp"
        android:singleLine="true" />


    <EditText
        android:id="@+id/etSerPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="308dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:background="@drawable/et_round"
        android:ems="15"
        android:hint="Price (in Rs.)"
        android:inputType="number"
        android:padding="15dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etSerDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="372dp"
        android:layout_weight="1"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/et_round"
        android:hint="Description"
        android:inputType="text"
        android:minLines="5"
        android:padding="15dp"
        android:singleLine="true" />



</RelativeLayout>