<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChoiceActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:titleTextColor="#000">

        <TextView
            android:id="@+id/workshop_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WHEELSPLAY WORKSHOP"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/add_mechanic_cardview"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_above="@+id/view_requests_cardview"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-247dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/orange">

        <TextView
            android:id="@+id/mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="80dp"
            android:text="Add new mechanic"
            android:textColor="@color/colorwhite"
            android:textColorHighlight="@color/orange"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/mechanic" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/view_requests_cardview"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="247dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/blue">

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Requests"
            android:textAlignment="center"
            android:textColor="@color/colorwhite"
            android:textColorHighlight="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--android:layout_marginLeft="30dp"-->
        <!--android:layout_marginStart="40dp"-->

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/brakes" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/myempcard"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_above="@+id/view_requests_cardview"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-247dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/blue_link">

        <TextView
            android:id="@+id/myemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="80dp"
            android:text="My Employees List"
            android:textColor="@color/colorwhite"
            android:textColorHighlight="@color/orange"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/mechanic" />

    </android.support.v7.widget.CardView>

</LinearLayout>