<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMechanic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/default_profile_image"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="0.10dp" />

        <ImageView
            android:id="@+id/verifiedIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="43dp"
            app:srcCompat="@drawable/ic_check_circle" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mechanicNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert:"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/serviceTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Class Requested"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mechanicPhoneTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+923165994525"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience:"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/mechanicExperienceTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="2 Years"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/workshopNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rawalpindi Workshop"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/assignBtn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Assign"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/activeIcon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="08dp"
        android:src="@drawable/green_circle"
        android:visibility="gone" />

</LinearLayout>