<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".PhoneNo_Verification">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="50dp"
        android:layout_marginTop="132dp"
        android:background="@color/colorwhite"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/cardview_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/etverificicationcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="phone"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnverify"
                android:layout_width="42dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/user_btn"
                android:drawableLeft="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawablePadding="10dp"
                android:elevation="20dp"
                android:padding="10dp"
                android:textColor="@color/colorwhite" />

            <TextView
                android:id="@+id/tvVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tv2"
                android:layout_marginTop="30dp"
                android:text="Code"
                android:textColor="@color/colormain"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68dp"
                android:text="Enter the pin you have received via SMS on" />

            <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
                android:layout_marginLeft="58dp"
            android:ems="15"
            android:inputType="number"
            android:textSize="12sp" />

            <TextView
            android:id="@+id/tvResend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="220dp"
            android:text="Resend Code"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


