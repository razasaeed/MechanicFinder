<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".User_Name">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardElevation="30dp"
        android:layout_marginTop="132dp"
        android:background="@color/colorwhite"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:id="@+id/cardview_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="42dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/user_btn"
                android:drawableLeft="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawablePadding="10dp"
                android:elevation="20dp"
                android:padding="10dp"
                android:textColor="@color/colorwhite" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tv2"
                android:layout_marginTop="30dp"
                android:text="UserName"
                android:textColor="@color/colormain"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="68dp"
                android:text="Enter your full name" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>